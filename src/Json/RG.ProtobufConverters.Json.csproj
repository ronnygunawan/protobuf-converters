<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <LangVersion>10.0</LangVersion>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>RG.ProtobufConverters.Json</PackageId>
    <Version>1.0.5</Version>
    <Authors>Ronny Gunawan</Authors>
    <Product>RG,ProtobufConverters.Json</Product>
    <Description>Serialize generated protobuf classes using System.Text.Json</Description>
    <Copyright>(C) 2022 Ronny Gunawan</Copyright>
    <PackageProjectUrl>https://github.com/ronnygunawan/protobuf-converters</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ronnygunawan/protobuf-converters</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryType>git</RepositoryType>
    <PackageTags>protobuf json</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.19.4" />
  </ItemGroup>

</Project>
